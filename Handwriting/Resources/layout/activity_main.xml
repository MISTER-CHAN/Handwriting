
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/iv_canvas"
        android:background="#ffffff"
		android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center">
        <TextView
            android:text="Stroke Width"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
		    android:layout_weight="3" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sb_width"
		    android:layout_weight="1"
            android:max="64"
            android:progress="48" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center">
        <TextView
            android:text="Char Height"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
		    android:layout_weight="3" />
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sb_height"
		    android:layout_weight="1"
            android:max="128"
            android:progress="128" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:gravity="center">
        <Button
            android:text="░"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_paper"
		    android:layout_weight="1" />
        <Button
            android:text="█"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_color"
            android:textColor="#000000"
		    android:layout_weight="1" />
        <Button
            android:text="－"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_space"
		    android:layout_weight="1" />
        <Button
            android:text="▶"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_next"
		    android:layout_weight="1" />
        <Button
            android:text="⌫"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_backspace"
		    android:layout_weight="1" />
        <Button
            android:text="↵"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b_return"
		    android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>